{
    "version": 2,
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "console_title_template": "{{ .Folder }}",
    "transient_prompt": {
        "background": "transparent",
        "foreground": "#FEF5ED",
        "template": "{{ .Shell }}"
    },
    "blocks": [
        {
            "type": "prompt",
            "alignment": "right",
            "newline": true,
            "overflow": "hide",
            "segments": [
                {
                    "type": "go",
                    "style": "powerline",
                    "foreground": "#00ADD8",
                    "template": " \ue627 "
                },
                {
                    "type": "lua",
                    "style": "powerline",
                    "foreground": "#000080",
                    "template": " \ue620 "
                },
                {
                    "type": "rust",
                    "style": "powerline",
                    "foreground": "#b7410e",
                    "template": " \ue68b "
                },
                {
                    "type": "python",
                    "style": "powerline",
                    "foreground": "#3572A5",
                    "template": " \ue73c "
                },
                {
                    "type": "java",
                    "style": "powerline",
                    "foreground": "#FF4500",
                    "template": " \ue738 "
                },
                {
                    "type": "node",
                    "style": "powerline",
                    "foreground": "#45bf17",
                    "template": " \ue718 "
                },
                {
                    "type": "react",
                    "style": "powerline",
                    "foreground": "#61dafb",
                    "template": " \ue7ba "
                },
                {
                    "type": "executiontime",
                    "style": "powerline",
                    "foreground": "#a9ffb4",
                    "template": " {{ .FormattedMs }} ",
                    "properties": {
                        "threshold": 0,
                        "style": "round"
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "overflow": "break",
            "segments": [
                {
                    "type": "time",
                    "style": "diamond",
                    "background": "#bd93f9",
                    "foreground": "#f8f8f2",
                    "leading_diamond": "\ue0c7",
                    "trailing_diamond": "\ue0c6",
                    "properties": {
                        "time_format": "3:04 PM"
                    },
                    "template": " {{ .CurrentDate | date .Format }} "
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "background": "#6272a4",
                    "foreground": "#f8f8f2",
                    "leading_diamond": "\ue0c7",
                    "trailing_diamond": "\ue0c6",
                    "properties": {
                        "style": "agnoster_full",
                        "folder_separator_icon": "/"
                    },
                    "template": " {{ .Path }} "
                },
                {
                    "type": "git",
                    "style": "diamond",
                    "background": "#98bfad",
                    "foreground": "#000000",
                    "leading_diamond": "\ue0c7",
                    "trailing_diamond": "\ue0c6",
                    "properties": {
                        "branch_icon": "\ue725 "
                    },
                    "template": " {{ .HEAD }} "
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "overflow": "break",
            "segments": [
                {
                    "type": "status",
                    "style": "diamond",
                    "foreground": "#FFF",
                    "properties": {
                        "always_enabled": true
                    },
                    "template": "$ "
                }
            ]
        }
    ]
}
